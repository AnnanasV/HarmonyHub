@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-10">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div class="row justify-content-center">
                <div class="col-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Username" class=" form-control" />
                        <label asp-for="Input.Username" class="form-label"></label>
                    </div>
                    <br />
                    <div class="form-floating">
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <label asp-for="Input.PhoneNumber" class="form-label"></label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Input.PathToPhoto">Photo</label>
                        <input asp-for="Input.PathToPhoto" type="file" class="form-control-file" id="Input_ProfilePhoto" name="Input.ProfilePhoto">
                    </div>
                    <br />
                </div>
                <div class="col-6">
                    <div>
                        <h4>Profile Photo:</h4>
                        @if (!string.IsNullOrEmpty(Model.Input.PathToPhoto))
                        {
                            <img src="@Model.Input.PathToPhoto" alt="Profile Photo" width="200">
                        }
                        else
                        {
                            <img src="/images/profiles/default-user.jpg" alt="Profile Photo" width="200">
                        }
                    </div>
                <br />
                </div>
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
