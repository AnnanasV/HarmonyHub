@using Microsoft.AspNetCore.Identity
@model ChooseFindModel

<style>
    ul {
        column-count: 2;
        list-style: none;
    }
</style>

<h2>Кого ви шукаєте?</h2>
<hr />

<form asp-action="Index" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <ul class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <li class="mt-3">
                <input type="checkbox" name="roles" value="@role.Name"
                @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />
                <label style="margin-left: 20px; font-size: 18px;">@role.Name</label> <br />
            </li>
        }
    </ul>
    <button type="submit" class="btn btn-outline-success mt-4">Зберегти</button>
</form>